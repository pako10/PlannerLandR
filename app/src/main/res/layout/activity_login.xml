<LinearLayout
    android:id="@+id/lt_principal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/plantillageneral"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="210dp"
    android:weightSum="1"
    tools:context=".MainActivity">







    <EditText
        android:id="@+id/et_user_login"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:hint="Pid\ Nombre de Usuario"
        android:textColorHint="@color/material_blue_grey_800"
        android:background="#FFFFFF"
        android:layout_weight="0.09"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"/>



    <EditText
        android:id="@+id/et_user_password"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/material_blue_grey_800"
        android:background="#ffffff"
        android:layout_weight="0.09"
        android:textColor="#000000"/>


    <Button
        android:id="@+id/btn_user_value_ok"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:layout_gravity="center_horizontal"
        android:background="#ffa7123f"
        android:textColor="#ffffff"
        android:layout_marginTop="79dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/et_user_login" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Tienes Cuenta? Registrate"
        android:id="@+id/registerL"
        android:layout_weight="0.09"
        android:layout_marginTop="20dp"
        android:textColor="#0D47A1"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_user_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_user_result"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/btn_user_value_cancel" />
</LinearLayout>
